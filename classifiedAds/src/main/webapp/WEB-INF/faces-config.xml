<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                      http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

<managed-bean>
	<managed-bean-name>AdsCtrl</managed-bean-name>
	<managed-bean-class>fr.u.bordeaux.classifiedAds.Controller.AdsCtrl</managed-bean-class>
	<managed-bean-scope>view</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>AdCtrl</managed-bean-name>
	<managed-bean-class>fr.u.bordeaux.classifiedAds.Controller.AdCtrl</managed-bean-class>
	<managed-bean-scope>view</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>MyAds</managed-bean-name>
	<managed-bean-class>fr.u.bordeaux.classifiedAds.Controller.MyAds</managed-bean-class>
	<managed-bean-scope>view</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>UserCtrl</managed-bean-name>
	<managed-bean-class>fr.u.bordeaux.classifiedAds.Controller.UserCtrl</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>
<converter>
	<description>converter for the user type</description>
	<converter-id>UserConverter</converter-id>
	<converter-class>fr.u.bordeaux.classifiedAds.util.UserConverter</converter-class>	
</converter>

</faces-config>